    }                                     

    private void jLabel9MouseClicked(java.awt.event.MouseEvent evt) {                                     
        txtnama.setText(null);
       txttelp.setText(null);
       txtmulai.setSelectedIndex(0);
       txtselesai.setSelectedIndex(0);
    }                                    

    private void txttglActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
    }                                      

    private void btnSubmitActionPerformed(java.awt.event.ActionEvent evt) {                                          
       if ("".equals(txtnama.getText()) ||
                "".equals(txttelp.getText())|| 
                "".equals(txtmulai.getSelectedItem())|| 
                "".equals(txtselesai.getSelectedItem())||
                "".equals(txttgl.getText())) {
            JOptionPane.showMessageDialog(this, "Harap Lengkapi Data", "Error", JOptionPane.WARNING_MESSAGE);
        } else {
            String SQL = "INSERT INTO t_pemesanan (id_pemesanan,nama_band,no_telp,jam_mulai,jam_selesai,tanggal)" + 
                    "VALUES('" +txttgl.getText()+ txtmulai.getSelectedItem()
                    + "','" + txtnama.getText() 
                    + "','" + txttelp.getText()
                    + "','" + txtmulai.getSelectedItem()
                    + "','" + txtselesai.getSelectedItem()
                    + "','" + txttgl.getText() + "')";
            int status = Koneksi.execute(SQL);
            if (status == 1) {
                JOptionPane.showMessageDialog(this, "Data berhasil ditambahkan", "Sukses", JOptionPane.WARNING_MESSAGE);
                selectData();
            } else {
                JOptionPane.showMessageDialog(this, "Data gagal ditambahkan", "Sukses", JOptionPane.WARNING_MESSAGE);
            }
        }
    }                                         

    private void btnUpdateActionPerformed(java.awt.event.ActionEvent evt) {                                          
        int baris = tbljadwal.getSelectedRow();
        
        String SQL = "UPDATE t_pemesanan SET "
            + "id_pemesanan='"+txttgl.getText()+txtmulai.getSelectedItem()+"',"
            + "nama_band='"+txtnama.getText()+"',"
            + "no_telp='"+txttelp.getText()+"',"
            + "jam_mulai='"+txtmulai.getSelectedItem()+"',"
            + "jam_selesai='"+txtselesai.getSelectedItem()+"',"
            + "tanggal='"+txttgl.getText()+"' "
            + "WHERE id_pemesanan='"+tbljadwal.getValueAt(baris, 0).toString()+"'";
            int status = Koneksi.execute(SQL);
            if (status == 1) {
                JOptionPane.showMessageDialog(this, "Data berhasil diupdate", "Sukses", JOptionPane.INFORMATION_MESSAGE);
                selectData();
            } else {
                JOptionPane.showMessageDialog(this, "Data gagal diupdate", "Sukses", JOptionPane.WARNING_MESSAGE);
            }
    }                                         

    private void btnDeleteActionPerformed(java.awt.event.ActionEvent evt) {                                          
        int baris = tbljadwal.getSelectedRow();
        if (baris != -1) {
            String id_pemesanan = tbljadwal.getValueAt(baris, 0).toString();
            String SQL = "DELETE FROM t_pemesanan WHERE id_pemesanan='"+id_pemesanan+"'";
            int status = Koneksi.execute(SQL);
            if (status==1) {
                JOptionPane.showMessageDialog(this, "Data berhasil dihapus", "Sukses", JOptionPane.INFORMATION_MESSAGE);
            } else {
                JOptionPane.showMessageDialog(this, "Data gagal dihapus", "Gagal", JOptionPane.WARNING_MESSAGE);
            }
        } else {
            JOptionPane.showMessageDialog(this, "Pilih Baris Data Terlebih dahulu", "Error", JOptionPane.WARNING_MESSAGE);
        }
        selectData();
    }                                         

