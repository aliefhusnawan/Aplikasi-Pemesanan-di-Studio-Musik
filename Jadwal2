    private void jLabel4MouseClicked(java.awt.event.MouseEvent evt) {                                     
        Home i = new Home();
        i.setVisible(true);
        this.setVisible(false);
    }                                    

    private void tbljadwalMouseClicked(java.awt.event.MouseEvent evt) {                                       
        int baris = tbljadwal.getSelectedRow();
        if (baris != -1)
        {
            txtnama.setText(tbljadwal.getValueAt(baris, 1).toString());
            txttelp.setText(tbljadwal.getValueAt(baris, 2).toString());
            txtmulai.setSelectedItem(tbljadwal.getValueAt(baris, 3).toString());
            txtselesai.setSelectedItem(tbljadwal.getValueAt(baris, 4).toString());
            txttgl.setText(tbljadwal.getValueAt(baris, 5).toString());
        }
    }                                      

    private void jLabel13MouseClicked(java.awt.event.MouseEvent evt) {                                      
        
    }                                     

