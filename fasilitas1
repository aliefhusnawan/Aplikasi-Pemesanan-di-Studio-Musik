    private void jLabel4MouseClicked(java.awt.event.MouseEvent evt) {                                     
        Home i = new Home();
        i.setVisible(true);
        this.setVisible(false);

    }                                    

    private void tblfasilitasMouseClicked(java.awt.event.MouseEvent evt) {                                          
        int baris = tblfasilitas.getSelectedRow();
        if (baris != -1)
        {
            txtid.setText(tblfasilitas.getValueAt(baris, 0).toString());
            txtfasilitas.setText(tblfasilitas.getValueAt(baris, 1).toString());
            txtjumlah.setText(tblfasilitas.getValueAt(baris, 2).toString());
            txtkondisi.setSelectedItem(tblfasilitas.getValueAt(baris, 3).toString());
        }
    }                                         

    private void jLabel11MouseClicked(java.awt.event.MouseEvent evt) {                                      

        if ("".equals(txtid.getText())
                || "".equals(txtfasilitas.getText())
                || "".equals(txtjumlah.getText())
                || "".equals(txtkondisi.getSelectedItem())) {
            JOptionPane.showMessageDialog(this, "Harap Lengkapi Data", "Error", JOptionPane.WARNING_MESSAGE);
        } else {
            String SQL = "INSERT INTO t_fasilitas (id_fasilitas,nama_fasilitas,jumlah_fasilitas,kondisi)"
                    + "VALUES('" + txtid.getText()
                    + "','" + txtfasilitas.getText()
                    + "','" + txtjumlah.getText()
                    + "','" + txtkondisi.getSelectedItem()+ "')";
            int status = Koneksi.execute(SQL);
            if (status == 1) {
                JOptionPane.showMessageDialog(this, "Data berhasil ditambahkan", "Sukses", JOptionPane.WARNING_MESSAGE);
                selectData();
            } else {
                JOptionPane.showMessageDialog(this, "Data gagal ditambahkan", "Sukses", JOptionPane.WARNING_MESSAGE);
            }
        }
    }                                     

    private void jLabel13MouseClicked(java.awt.event.MouseEvent evt) {                                      
        
    }                                     

