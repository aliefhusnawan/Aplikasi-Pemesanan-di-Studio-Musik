    public void selectData() {
        String kolom[] = {"ID", "NAMA FASILITAS", "JUMLAH", "KONDISI"};
        DefaultTableModel dtm = new DefaultTableModel(null, kolom);
        String SQL = "SELECT * FROM t_fasilitas";
        ResultSet rs = Koneksi.executeQuery(SQL);
        try {
            while (rs.next()) {
                String id = rs.getString(1);
                String nama = rs.getString(2);
                String jumlah = rs.getString(3);
                String kondisi = rs.getString(4);
                String data[] = {id, nama, jumlah, kondisi};
                dtm.addRow(data);
            }
        } catch (SQLException ex) {

            Logger.getLogger(Jadwal_02.class.getName()).log(Level.SEVERE, null, ex);
        }
        tblfasilitas.setModel(dtm);
    }

